    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Indexer",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/indexer",
            "args": [
                "-c",
                "${workspaceFolder}/build/dipdup.yml"
            ],
            "envFile": "${workspaceFolder}/.env"
        }, {
            "name": "Launch Tester",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/tester",
            "args": [
                "-c",
                "${workspaceFolder}/cmd/tester/dipdup.yml"
            ],
            "envFile": "${workspaceFolder}/.env"
        }, {
            "name": "Launch Starknet Id",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/rpc_tester",
            "args": [
                "-c",
                "${workspaceFolder}/cmd/rpc_tester/starknet_id.yml"
            ],
            "envFile": "${workspaceFolder}/.env"
        }, {
            "name": "Launch Loot Survivor",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/rpc_tester",
            "args": [
                "-c",
                "${workspaceFolder}/cmd/rpc_tester/loot_survivor.yml"
            ],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}